<style>
    body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        margin: 0;
        padding: 0;
    }

    h1 {
        font-size: 2rem;
        margin-bottom: 1rem;
        color: #b8b5b5;
    }

    h2 {
        font-size: 1.5rem;
        margin-top: 2rem;
        margin-bottom: 0.5rem;
        color: #c8c6c6;
        text-transform: uppercase;
        border-bottom: 2px solid #ddd;
        padding-bottom: 0.25rem;
    }

    p {
        margin-left: 1rem;
        margin-bottom: 1rem;
        color: #e5e3e3;
    }

    small {
        color:#b8bfbe;
    }

    .content-section {
        margin-bottom: 2rem;
    }
</style>
